{# templates/register.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Registro de Usuario{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            font-family: 'Montserrat', sans-serif;
            background-color: #191D33;
            color: #FFFFFF;
            margin: 0;
            padding: 0;
        }
        
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 1rem;
        }
        
        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1.5rem 0;
        }
        
        .logo img {
            height: 40px;
        }
        
        nav {
            display: flex;
            gap: 1rem;
            align-items: center;
        }
        
        nav a {
            color: rgba(255, 255, 255, 0.8);
            text-decoration: none;
            transition: color 0.2s;
        }
        
        nav a:hover {
            color: white;
        }
        
        .about-button {
            display: inline-block;
            background-color: transparent;
            border-radius: 9999px;
            padding: 10px 20px;
            font-weight: bold;
            font-size: 14px;
            color: #FFFFFF;
            text-align: center;
            text-decoration: none;
            transition: color 0.2s ease;
        }

        .about-button:hover {
            color: #ECB13A;
        }

        .contact-button {
            display: inline-block;
            background-color: #ECB13A;
            border-radius: 9999px;
            padding: 10px 20px;
            font-weight: bold;
            font-size: 14px;
            color: #FFFFFF;
            text-align: center;
            text-decoration: none;
            transition: background-color 0.2s ease;
        }

        .contact-button:hover {
            background-color: #ECB13A;
        }
        
        .registration-container {
            max-width: 500px;
            margin: 2rem auto;
            padding: 0 1rem;
        }
        
        h1 {
            font-size: 1.75rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
            text-align: center;
        }
        
        .description {
            color: rgba(255, 255, 255, 0.8);
            text-align: center;
            margin-bottom: 2rem;
        }
        
        .form-group {
            margin-bottom: 1rem;
        }
        
        .form-row {
            display: flex;
            gap: 1rem;
            margin-bottom: 1rem;
        }
        
        .form-col {
            flex: 1;
        }
        
        label {
            display: block;
            font-size: 0.875rem;
            margin-bottom: 0.25rem;
        }
        
        .form-control {
            width: 100%;
            padding: 0.5rem 0.75rem;
            background-color: #191D33;
            border: 1px solid rgba(255, 255, 255, 0.7);
            border-radius: 0.5rem;
            color: white;
            box-sizing: border-box;
            height: 40px;
            font-family: 'Montserrat', sans-serif;
        }
        
        .form-control:focus {
            outline: none;
            border: 2px solid #ECB13A;
        }
        
        /* Estilos para el contenedor de contrase√±a */
        .password-container {
            position: relative;
        }
        
        .password-toggle {
            position: absolute;
            right: 0.75rem;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            color: rgba(255, 255, 255, 0.7);
            cursor: pointer;
        }
        
        /* Estilos espec√≠ficos para el selector de tel√©fono */
        .phone-container {
            display: flex;
            align-items: center;
            background-color: #191D33;
            border-radius: 0.5rem;
            overflow: hidden;
            height: 40px;
            border: 1px solid rgba(255, 255, 255, 0.7);
        }
        
        .country-selector {
            position: relative;
            background-color: white;
            border-radius: 0.5rem 0 0 0.5rem;
            margin: 3px;
            padding: 0 10px;
            display: flex;
            align-items: center;
            min-width: 90px;
            height: calc(100% - 6px);
            cursor: pointer;
        }
        
        .country-selector.active {
            border: 1px solid #ECB13A;
        }
        
        .country-selector-dropdown {
            position: absolute;
            top: 100%;
            left: 0;
            width: 200px;
            max-height: 200px;
            overflow-y: auto;
            background-color: white;
            border-radius: 0.5rem;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            z-index: 10;
            display: none;
        }
        
        .country-selector-dropdown.show {
            display: block;
        }
        
        .country-option {
            display: flex;
            align-items: center;
            padding: 8px 12px;
            cursor: pointer;
            color: #333;
        }
        
        .country-option:hover {
            background-color: #f5f5f5;
        }
        
        .selected-flag {
            margin-right: 8px;
            font-size: 16px;
        }
        
        .selected-code {
            color: #333;
            font-weight: 500;
        }
        
        .dropdown-arrow {
            margin-left: 8px;
            color: #333;
        }
        
        .phone-input {
            flex: 1;
            background: transparent;
            border: none;
            color: white;
            padding: 0 15px;
            height: 100%;
        }
        
        .phone-input:focus {
            outline: none;
        }
        
        /* Estilos para el bot√≥n de registro */
        .register-button {
            background-color: white;
            color: #1a1a36;
            border: none;
            padding: 0.75rem 2rem;
            border-radius: 9999px;
            font-weight: 600;
            font-size: 1rem;
            cursor: pointer;
            display: block;
            margin: 2rem auto 1rem;
            transition: background-color 0.2s;
        }
        
        .register-button:hover {
            background-color: #f0f0f0;
        }
        
        .login-link {
            text-align: center;
            margin-top: 1rem;
        }
        
        .login-link a {
            color: white;
            text-decoration: none;
            font-weight: 600;
        }
        
        .login-link a:hover {
            text-decoration: underline;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container">
    <header>
        <div style="position: relative; left: 20%; top: 20%; cursor: pointer;" onclick="window.location.href='{{ path('home_index') }}'">
            <img src="{{ asset('images/favicon.png') }}" alt="SACI" class="favicon" style="height: 40px; width: auto; margin-left: 10px; transform: translateY(10%);"/>
            <img src="{{ asset('images/saci-blanco.png') }}" alt="SACI" class="float-left mt-2" style="height: 50px; width: auto; transform: translateY(20%);"/>
        </div>
        <nav>
            <a href="{{ path('home_about') }}" class="about-button" style="text-decoration: none;">SOBRE NOSOTROS</a>
            <a href="{{ path('home_contact') }}" class="contact-button" style="text-decoration: none;">CONTACTO</a>
        </nav>
    </header>
    
    <div class="registration-container">
        <h1>Registro de Usuario</h1>
        <p class="description">Complet√° con tus datos para crear una cuenta</p>
        
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}
        
        {{ form_start(registrationForm) }}
        
        {# Nombre y Apellido #}
        <div class="form-row">
            <div class="form-col">
                <label for="{{ registrationForm.nombre.vars.id }}">Nombre</label>
                {{ form_widget(registrationForm.nombre, {
                    'attr': {
                        'class': 'form-control',
                        'placeholder': ''
                    }
                }) }}
            </div>
            <div class="form-col">
                <label for="{{ registrationForm.apellido.vars.id }}">Apellido</label>
                {{ form_widget(registrationForm.apellido, {
                    'attr': {
                        'class': 'form-control',
                        'placeholder': ''
                    }
                }) }}
            </div>
        </div>
        
        {# DNI y Direcci√≥n #}
        <div class="form-row">
            <div class="form-col">
                <label for="{{ registrationForm.dni.vars.id }}">DNI</label>
                {{ form_widget(registrationForm.dni, {
                    'attr': {
                        'class': 'form-control',
                        'placeholder': ''
                    }
                }) }}
            </div>
            <div class="form-col">
                <label for="{{ registrationForm.direccion.vars.id }}">Direcci√≥n</label>
                {{ form_widget(registrationForm.direccion, {
                    'attr': {
                        'class': 'form-control',
                        'placeholder': ''
                    }
                }) }}
            </div>
        </div>
        
        {# Correo electr√≥nico #}
        <div class="form-group">
            <label for="{{ registrationForm.email.vars.id }}">Correo electr√≥nico</label>
            {{ form_widget(registrationForm.email, {
                'attr': {
                    'class': 'form-control',
                    'placeholder': 'ejemplo@hotmail.com'
                }
            }) }}
        </div>
        
        {# N√∫mero de Tel√©fono con selector de pa√≠s #}
        <div class="form-group">
            <label for="{{ registrationForm.telefono.vars.id }}">N√∫mero de Tel√©fono</label>
            <div class="phone-container">
                <div id="countrySelector" class="country-selector">
                    <span id="selectedFlag" class="selected-flag">üá¶üá∑</span>
                    <span id="selectedCode" class="selected-code">+54</span>
                    <span class="dropdown-arrow">‚ñº</span>
                </div>
                {{ form_widget(registrationForm.telefono, {
                    'attr': {
                        'class': 'form-control phone-input',
                        'placeholder': ''
                    }
                }) }}
                
                <div id="countrySelectorDropdown" class="country-selector-dropdown">
                    {% for country in phoneCodes %}
                        <div class="country-option" data-code="{{ country.phoneCode }}" data-flag="{{ country.flagEmoji }}">
                            <span class="flag">{{ country.flagEmoji }}</span>
                            <span class="code">{{ country.phoneCode }}</span>
                            <span class="name">{{ country.name }}</span>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
        
        {# Contrase√±a #}
        <div class="form-group">
            <label for="{{ registrationForm.Password.vars.id }}">Contrase√±a</label>
            <div class="password-container">
                {{ form_widget(registrationForm.Password, {
                    'attr': {
                        'class': 'form-control',
                        'placeholder': '‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢'
                    }
                }) }}
                <button type="button" class="password-toggle" onclick="togglePassword()">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path><circle cx="12" cy="12" r="3"></circle></svg>
                </button>
            </div>
        </div>
        
        <button type="submit" class="register-button">Registrar</button>
        
        {# Campo oculto para almacenar el c√≥digo de pa√≠s seleccionado #}
        <input type="hidden" name="countryCode" id="countryCodeInput" value="+54">
        
        {{ form_end(registrationForm) }}
        
        <div class="login-link">
            <p>¬øYa ten√©s una cuenta? <a href="{{ path('auth_login') }}">Inicia sesi√≥n</a></p>
        </div>
    </div>
</div>

<script>
    // Funci√≥n para alternar la visibilidad de la contrase√±a
    function togglePassword() {
        const passwordInput = document.getElementById('{{ registrationForm.Password.vars.id }}');
        const passwordToggle = document.querySelector('.password-toggle svg');
        
        if (passwordInput.type === 'password') {
            passwordInput.type = 'text';
            passwordToggle.innerHTML = '<path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24"></path><line x1="1" y1="1" x2="23" y2="23"></line>';
        } else {
            passwordInput.type = 'password';
            passwordToggle.innerHTML = '<path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path><circle cx="12" cy="12" r="3"></circle>';
        }
    }
    
    // Funcionalidad para el selector de pa√≠s
    document.addEventListener('DOMContentLoaded', function() {
        const countrySelector = document.getElementById('countrySelector');
        const dropdown = document.getElementById('countrySelectorDropdown');
        const selectedFlag = document.getElementById('selectedFlag');
        const selectedCode = document.getElementById('selectedCode');
        const countryCodeInput = document.getElementById('countryCodeInput');
        const countryOptions = document.querySelectorAll('.country-option');
        
        // Mostrar/ocultar el dropdown al hacer clic en el selector
        countrySelector.addEventListener('click', function(e) {
            e.stopPropagation();
            dropdown.classList.toggle('show');
            countrySelector.classList.toggle('active');
        });
        
        // Cerrar el dropdown al hacer clic fuera de √©l
        document.addEventListener('click', function() {
            dropdown.classList.remove('show');
            countrySelector.classList.remove('active');
        });
        
        // Evitar que el dropdown se cierre al hacer clic dentro de √©l
        dropdown.addEventListener('click', function(e) {
            e.stopPropagation();
        });
        
        // Seleccionar un pa√≠s
        countryOptions.forEach(option => {
            option.addEventListener('click', function() {
                const code = this.getAttribute('data-code');
                const flag = this.getAttribute('data-flag');
                
                selectedFlag.textContent = flag;
                selectedCode.textContent = code;
                countryCodeInput.value = code;
                
                dropdown.classList.remove('show');
                countrySelector.classList.remove('active');
            });
        });
    });
</script>
{% endblock %}