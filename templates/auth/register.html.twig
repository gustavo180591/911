{# templates/registro.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}SACI - REGISTRO DE USUARIO{% endblock %}

{% block body %}
<header>
         <div style="position: relative; left: 20%; top: 20%;">
        <img src="{{ asset('images/favicon.png') }}" alt="SACI" class="favicon" style="height: 40px; width: auto; margin-left: 10px; transform: translateY(10%);"/>
        <img src="{{ asset('images/saci-blanco.png') }}" alt="SACI" class="float-left mt-2" style="height: 50px; width: auto; transform: translateY(20%);"/>
    </div>
        <nav>
            <a href="{{ path('home_about') }}" class="about-button" style="right: 400px;">SOBRE NOSOTROS</a>
    <a href="{{ path('home_contact') }}" class="contact-button" style="right: 240px;">CONTACTO</a> 
         </nav>
    </header>
     <style>
        body {
            background-color: #191D33;
        }
        .about-button {
            position: absolute;
            top: 20px;
            right: 180px;
            display: inline-block;
            background-color: transparent;
            border-radius: 9999px;
            padding: 10px 30px;
            font-weight: bold;
            font-size: 16px;
            color: #ECB13A;
            text-align: center;
            text-decoration: none;
            transition: background-color 0.2s ease, color 0.2s ease;
        }
        .about-button:hover {
            color: #FFFFFF;
        }
        .contact-button {
            position: absolute;
            top: 20px;
            right: 20px;
            display: inline-block;
            background-color: #ECB13A;
            border-radius: 9999px; /* Píldora */
            padding: 10px 30px;
            font-weight: bold;
            font-size: 16px;
            color: #FFFFFF;
            text-align: center;
            text-decoration: none;
            transition: background-color 0.2s ease, color 0.2s ease;
        }
        .contact-button:hover {
            background-color: #FFFFFF;
            color: #ECB13A;
        }
    </style>
<div class="container mt-4">
    <h1 class="mb-3">Registro de Usuario</h1>
    <p class="mb-4">Completá con tus datos para crear una cuenta</p>

    <!-- Mensajes de éxito y error -->
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}

    {{ form_start(registrationForm) }}

    <div class="row">
        <div class="col-md-6 mb-3">
            {{ form_label(registrationForm.nombre, 'Nombre') }}
            {{ form_widget(registrationForm.nombre, { 'attr': {'class': 'form-control', 'placeholder': 'Ej: Juan'} }) }}
            {{ form_errors(registrationForm.nombre) }}
        </div>

        <div class="col-md-6 mb-3">
            {{ form_label(registrationForm.apellido, 'Apellido') }}
            {{ form_widget(registrationForm.apellido, { 'attr': {'class': 'form-control', 'placeholder': 'Ej: Pérez'} }) }}
            {{ form_errors(registrationForm.apellido) }}
        </div>

        <div class="col-md-6 mb-3">
            {{ form_label(registrationForm.dni, 'DNI') }}
            {{ form_widget(registrationForm.dni, { 'attr': {'class': 'form-control', 'placeholder': 'Ej: 12345678'} }) }}
            {{ form_errors(registrationForm.dni) }}
        </div>

        <div class="col-md-6 mb-3">
            {{ form_label(registrationForm.direccion, 'Dirección') }}
            {{ form_widget(registrationForm.direccion, { 'attr': {'class': 'form-control', 'placeholder': 'Ej: Av. Siempre Viva 1234'} }) }}
            {{ form_errors(registrationForm.direccion) }}
        </div>

        <div class="col-md-6 mb-3">
            {{ form_label(registrationForm.email, 'Correo Electrónico') }}
            {{ form_widget(registrationForm.email, { 'attr': {'class': 'form-control', 'placeholder': 'ejemplo@email.com'} }) }}
            {{ form_errors(registrationForm.email) }}
        </div>

        <div class="col-md-6 mb-3">
            {{ form_label(registrationForm.telefono, 'Teléfono') }}
            {{ form_widget(registrationForm.telefono, { 'attr': {'class': 'form-control', 'placeholder': 'Ej: +54 9 11 1234 5678'} }) }}
            {{ form_errors(registrationForm.telefono) }}
        </div>

        <div class="col-md-6 mb-3">
            {{ form_label(registrationForm.Password.first, 'Contraseña') }}
            {{ form_widget(registrationForm.Password.first, { 'attr': {'class': 'form-control'} }) }}
            {{ form_errors(registrationForm.Password.first) }}
        </div>

        <div class="col-md-6 mb-3">
            {{ form_label(registrationForm.Password.second, 'Repetir Contraseña') }}
            {{ form_widget(registrationForm.Password.second, { 'attr': {'class': 'form-control'} }) }}
            {{ form_errors(registrationForm.Password.second) }}
        </div>
    </div>

    <button type="submit" class="btn btn-primary w-100">Registrar</button>

    {{ form_end(registrationForm) }}

    <div class="mt-3 text-center">
        <p>¿Ya tenés una cuenta? <a href="{{ path('auth_login') }}" class="text-primary">Inicia sesión</a>.</p>
    </div>
</div>
{% endblock %}
