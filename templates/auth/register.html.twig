{% extends 'base.html.twig' %}

{% block title %}Registro de Usuario{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Registro de Usuario</h1>

    <!-- Mensajes de éxito y error -->
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}

    {{ form_start(registrationForm) }}

    <div class="row">
        <div class="col-md-6 mb-3">
            {{ form_label(registrationForm.nombre, 'Nombre') }}
            {{ form_widget(registrationForm.nombre, { 'attr': {'class': 'form-control'} }) }}
            {{ form_errors(registrationForm.nombre) }}
        </div>

        <div class="col-md-6 mb-3">
            {{ form_label(registrationForm.apellido, 'Apellido') }}
            {{ form_widget(registrationForm.apellido, { 'attr': {'class': 'form-control'} }) }}
            {{ form_errors(registrationForm.apellido) }}
        </div>
    </div>

    <div class="mb-3">
        {{ form_label(registrationForm.email, 'Correo Electrónico') }}
        {{ form_widget(registrationForm.email, { 'attr': {'class': 'form-control', 'placeholder': 'ejemplo@email.com'} }) }}
        {{ form_errors(registrationForm.email) }}
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            {{ form_label(registrationForm.Password.first, 'Contraseña') }}
            {{ form_widget(registrationForm.Password.first, { 'attr': {'class': 'form-control'} }) }}
            {{ form_errors(registrationForm.Password.first) }}
        </div>

        <div class="col-md-6 mb-3">
            {{ form_label(registrationForm.Password.second, 'Repite la Contraseña') }}
            {{ form_widget(registrationForm.Password.second, { 'attr': {'class': 'form-control'} }) }}
            {{ form_errors(registrationForm.Password.second) }}
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            {{ form_label(registrationForm.dni, 'DNI') }}
            {{ form_widget(registrationForm.dni, { 'attr': {'class': 'form-control', 'placeholder': 'Ej: 12345678'} }) }}
            {{ form_errors(registrationForm.dni) }}
        </div>

        <div class="col-md-6 mb-3">
            {{ form_label(registrationForm.telefono, 'Teléfono (opcional)') }}
            {{ form_widget(registrationForm.telefono, { 'attr': {'class': 'form-control', 'placeholder': 'Ej: +54 9 11 1234 5678'} }) }}
            {{ form_errors(registrationForm.telefono) }}
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            {{ form_label(registrationForm.fechaNacimiento, 'Fecha de Nacimiento') }}
            {{ form_widget(registrationForm.fechaNacimiento, { 'attr': {'class': 'form-control'} }) }}
            {{ form_errors(registrationForm.fechaNacimiento) }}
        </div>

        <div class="col-md-6 mb-3">
            {{ form_label(registrationForm.genero, 'Género (opcional)') }}
            {{ form_widget(registrationForm.genero, { 'attr': {'class': 'form-control'} }) }}
            {{ form_errors(registrationForm.genero) }}
        </div>
    </div>

    <div class="mb-3">
        {{ form_label(registrationForm.direccion, 'Dirección') }}
        {{ form_widget(registrationForm.direccion, { 'attr': {'class': 'form-control', 'placeholder': 'Ej: Av. Siempre Viva 1234'} }) }}
        {{ form_errors(registrationForm.direccion) }}
    </div>

    <button type="submit" class="btn btn-primary w-100">Registrar</button>

    {{ form_end(registrationForm) }}

    <div class="mt-3 text-center">
        <p>¿Ya tienes una cuenta? <a href="{{ path('app_login') }}" class="text-primary">Inicia sesión aquí</a>.</p>
    </div>
</div>
{% endblock %}
