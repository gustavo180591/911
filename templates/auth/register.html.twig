{% extends 'base.html.twig' %}

{% block title %}Registro de Usuario{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Registro de Usuario</h1>

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}

    {{ form_start(form) }}

    <div class="mb-3">
        {{ form_label(form.nombre, 'Nombre') }}
        {{ form_widget(form.nombre, { 'attr': {'class': 'form-control'} }) }}
        {{ form_errors(form.nombre) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.apellido, 'Apellido') }}
        {{ form_widget(form.apellido, { 'attr': {'class': 'form-control'} }) }}
        {{ form_errors(form.apellido) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.email, 'Correo Electrónico') }}
        {{ form_widget(form.email, { 'attr': {'class': 'form-control'} }) }}
        {{ form_errors(form.email) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.plainPassword.first, 'Contraseña') }}
        {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control'} }) }}
        {{ form_errors(form.plainPassword.first) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.plainPassword.second, 'Repite la Contraseña') }}
        {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control'} }) }}
        {{ form_errors(form.plainPassword.second) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.dni, 'DNI') }}
        {{ form_widget(form.dni, { 'attr': {'class': 'form-control'} }) }}
        {{ form_errors(form.dni) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.telefono, 'Teléfono (opcional)') }}
        {{ form_widget(form.telefono, { 'attr': {'class': 'form-control'} }) }}
        {{ form_errors(form.telefono) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.fechaNacimiento, 'Fecha de Nacimiento (opcional)') }}
        {{ form_widget(form.fechaNacimiento, { 'attr': {'class': 'form-control'} }) }}
        {{ form_errors(form.fechaNacimiento) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.genero, 'Género (opcional)') }}
        {{ form_widget(form.genero, { 'attr': {'class': 'form-control'} }) }}
        {{ form_errors(form.genero) }}
    </div>

    <button type="submit" class="btn btn-primary">Registrar</button>

    {{ form_end(form) }}

    <div class="mt-3">
        <p>¿Ya tienes una cuenta? <a href="{{ path('app_login') }}">Inicia sesión aquí</a>.</p>
    </div>
</div>
{% endblock %}
