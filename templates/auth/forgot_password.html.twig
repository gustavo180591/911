{% extends 'base.html.twig' %}

{% block title %}SACI - RECUPERAR LA CONTRASEÑA{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Recuperar Contraseña</h1>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    <style>
        h1 {
            color: white;
        }
    </style>
    {{ form_start(form) }}

    <div class="mb-3">
        {{ form_label(form.email, 'Correo Electrónico') }}
        {{ form_widget(form.email, { 'attr': {'class': 'form-control'} }) }}
        {{ form_errors(form.email) }}
    </div>

    <button type="submit" class="btn btn-primary" style="border-radius: 10px; background-color: white; color: black; transition: all 0.2s ease-in-out; transform: scale(1.1);">Enviar</button>

    <style>
        .btn-primary:hover {
            background-color: yellow;
        }
    </style>
    {{ form_end(form) }}

    <div class="mt-3">
        <a href="{{ path('auth_login') }}" class="btn btn-secondary">Volver al Login</a>
    </div>
</div>
{% endblock %}
