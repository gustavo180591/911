        }
        
        .declaration-text {
            font-size: 16px;
            line-height: 1.6;
            color: rgba(255, 255, 255, 0.9);
            margin-bottom: 15px;
        }
        
        .article-box {
            background-color: rgba(0, 0, 0, 0.2);
            padding: 15px;
            border-radius: 8px;
            margin: 20px 0;
        }
        
        .article-title {
            font-size: 16px;
            font-weight: 600;
            color: #ECB13A;
            margin-bottom: 10px;
        }
        
        .article-content {
            font-size: 14px;
            line-height: 1.5;
            color: rgba(255, 255, 255, 0.8);
            font-style: italic;
        }
        
        .important-note {
            background-color: rgba(240, 90, 69, 0.1);
            border-left: 3px solid #F05A45;
            padding: 15px;
            border-radius: 5px;
            margin-top: 20px;
        }
        
        .important-note p {
            color: rgba(255, 255, 255, 0.9);
            font-size: 14px;
            margin: 0;
        }
        
        .buttons-container {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 30px;
            animation: fadeIn 0.5s ease-out 0.8s both;
        }
        
        .home-button {
            display: inline-block;
            background-color: #ECB13A;
            color: #FFFFFF;
            border: none;
            padding: 15px 30px;
            border-radius: 9999px;
            font-weight: 600;
            font-size: 16px;
            text-decoration: none;
            transition: all 0.2s ease;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        
        .home-button:hover {
            background-color: #d9a035;
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(236, 177, 58, 0.3);
        }
        
        .login-button {
            display: inline-block;
            background-color: transparent;
            color: #FFFFFF;
            border: 2px solid #FFFFFF;
            padding: 15px 30px;
            border-radius: 9999px;
            font-weight: 600;
            font-size: 16px;
            text-decoration: none;
            transition: all 0.2s ease;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        
        .login-button:hover {
            border-color: #ECB13A;
            color: #ECB13A;
            transform: translateY(-2px);
        }
        
        .receipt-note {
            margin-top: 30px;
            font-size: 14px;
            color: rgba(255, 255, 255, 0.6);
            font-style: italic;
        }
        
        @media (max-width: 768px) {
            .success-container {
                margin: 60px auto;
            }
            
            .buttons-container {
                flex-direction: column;
                gap: 15px;
            }
            
            .home-button, .login-button {
                width: 100%;
                justify-content: center;
            }
            
            .declaration-card-icon {
                display: none;
            }
        }
    </style>
{% endblock %}

