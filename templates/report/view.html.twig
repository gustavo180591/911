{% extends 'base.html.twig' %}

{% block title %}Detalle del Reporte{% endblock %}

{% block body %}
<style>
    /* Estilos para el menú hamburguesa */
    .nav-toggle {
        display: none;
        font-size: 28px;
        color: #FFFFFF;
        background: none;
        border: none;
        cursor: pointer;
        z-index: 1002;
    }

    nav.main-nav {
        display: flex;
        align-items: center;
        gap: 20px;
    }

    @media (max-width: 768px) {
        .nav-toggle {
            display: block;
        }

        nav.main-nav {
            display: none;
            flex-direction: column;
            align-items: center;
            background: rgba(0, 0, 0, 0.95);
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            width: 100vw;
            padding-top: 60px;
            z-index: 1000;
        }

        nav.main-nav.active {
            display: flex;
        }

        .inicio-button, .about-button, .contact-button {
            font-size: 20px;
            margin: 10px 0;
        }

        header {
            padding: 15px 20px;
        }
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    .table {
        width: 100%;
        margin-bottom: 1rem;
        background-color: transparent;
        border-collapse: collapse;
    }

    .table th,
    .table td {
        padding: 0.75rem;
        vertical-align: top;
        border-top: 1px solid #dee2e6;
    }

    .table thead th {
        vertical-align: bottom;
        border-bottom: 2px solid #dee2e6;
        background-color: #f8f9fa;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        padding: 0.5rem 1rem;
        border-radius: 0.25rem;
        transition: all 0.3s ease;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
        border-color: #545b62;
    }
</style>

<header>
    <div class="logo-container" onclick="window.location.href='{{ path('home_index') }}'">
        <img src="{{ asset('images/favicon.png') }}" alt="SACI" class="favicon"/>
        <img src="{{ asset('images/saci-blanco.png') }}" alt="SACI" class="saci-logo"/>
    </div>
    <button class="nav-toggle" id="navToggle">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <line x1="3" y1="12" x2="21" y2="12"></line>
            <line x1="3" y1="6" x2="21" y2="6"></line>
            <line x1="3" y1="18" x2="21" y2="18"></line>
        </svg>
    </button>
    <div class="header-right">
        <nav class="main-nav" id="mainNav">
            <a href="{{ path('auth_login') }}" class="inicio-button">INICIO</a>
            <a href="{{ path('home_about') }}" class="about-button">SOBRE NOSOTROS</a>
            <a href="{{ path('home_contact') }}" class="contact-button">CONTACTO</a>
        </nav>
        {% include 'fragments/profile-menu.html.twig' %}
    </div>
</header>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const navToggle = document.getElementById('navToggle');
        const mainNav = document.getElementById('mainNav');

        navToggle.addEventListener('click', function() {
            mainNav.classList.toggle('active');
        });

        // Cerrar el menú al hacer clic en un enlace
        const navLinks = mainNav.querySelectorAll('a');
        navLinks.forEach(link => {
            link.addEventListener('click', function() {
                mainNav.classList.remove('active');
            });
        });
    });
</script>

<div class="container mt-4">
    <h1 class="mb-4">Detalle del Reporte</h1>

    <table class="table table-bordered">
        <tr>
            <th>ID</th>
            <td>{{ report.id }}</td>
        </tr>
        <tr>
            <th>Descripción</th>
            <td>{{ report.descripcion }}</td>
        </tr>
        <tr>
            <th>Autor</th>
            <td>{{ report.autor.nombre }} {{ report.autor.apellido }}</td>
        </tr>
        <tr>
            <th>Fecha de Creación</th>
            <td>{{ report.fechaGeneracion|date('d-m-Y H:i:s') }}</td>
        </tr>
    </table>

    <div class="mt-3">
        <a href="{{ path('report_index') }}" style="color: white; font-weight: bold; text-decoration: none;" class="btn btn-secondary">Volver a la Lista de Reportes</a>
    </div>
</div>
{% endblock %}
