{# templates/base.html.twig #}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}SACI{% endblock %}</title>
        <link rel="icon" type="image/png" href="{{ asset('images/favicon.png') }}">

        {# Ejemplo de fuente o iconos #}
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
        <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css">
        <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
        <link rel="manifest" href="/manifest.json">
        <meta name="theme-color" content="#0d6efd">
        {# Aquí se pueden añadir más CSS propios o de librerías #}
        {% block stylesheets %}
            <style>
                body {
                    color: white;
                }
            </style>
        {% endblock %}

        {# Scripts de JavaScript, si los necesitas #}
        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>

    <body>
        {# Bloque para el contenido principal de la página #}
        {% block body %}{% endblock %}

        {# Si tuvieras un footer, podrías incluirlo así:
            {% include 'partials/_footer.html.twig' %}
        #}
    </body>
    <script>
        if ('serviceWorker' in navigator) {
            navigator.serviceWorker.register('/service-worker.js')
            .then(() => console.log('Service Worker registrado'))
            .catch(error => console.error('Error al registrar Service Worker:', error));
        }
        </script>
</html>

