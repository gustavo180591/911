{% extends 'base.html.twig' %}

{% block title %}Términos y Condiciones - SAC{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap');

        body {
            font-family: 'Montserrat', sans-serif;
            background-color: #191D33;
            color: #FFFFFF;
            margin: 0;
            padding: 0;
            min-height: 100vh;
        }

        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 20px 50px;
        }
        
        .logo-container {
            display: flex;
            align-items: center;
        }
        
        .logo-container img.favicon {
            height: 40px;
            width: auto;
            margin-right: 10px;
        }
        
        .logo-container img.logo-text {
            height: 40px;
            width: auto;
        }

        .main-title {
            margin-bottom: 30px;
            font-size: 32px;
            font-weight: 700;
            color: #ECB13A;
            text-align: center;
        }

        .terms-container {
            max-width: 900px;
            margin: 20px auto 60px;
            padding: 0 20px;
        }

        .terms-section {
            background-color: rgba(255, 255, 255, 0.05);
            border-radius: 10px;
            padding: 30px;
            margin-bottom: 30px;
        }

        .terms-section h2 {
            color: #ECB13A;
            margin-top: 0;
            margin-bottom: 20px;
            font-size: 24px;
            font-weight: 600;
            border-bottom: 1px solid rgba(236, 177, 58, 0.3);
            padding-bottom: 10px;
        }

        .terms-section h3 {
            color: #FFFFFF;
            margin-top: 25px;
            margin-bottom: 15px;
            font-size: 20px;
            font-weight: 600;
        }

        .terms-section p {
            margin-bottom: 15px;
            line-height: 1.6;
            color: rgba(255, 255, 255, 0.9);
        }

        .article-box {
            background-color: rgba(0, 0, 0, 0.2);
            padding: 20px;
            border-radius: 8px;
            margin: 20px 0;
            border-left: 3px solid #ECB13A;
        }

        .article-title {
            font-size: 18px;
            font-weight: 600;
            color: #ECB13A;
            margin-bottom: 10px;
        }

        .article-content {
            font-size: 16px;
            line-height: 1.6;
            color: rgba(255, 255, 255, 0.9);
        }

        .article-explanation {
            margin-top: 20px;
            padding-top: 15px;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
        }

        .legal-note {
            background-color: rgba(240, 90, 69, 0.1);
            border-left: 3px solid #F05A45;
            padding: 15px;
            border-radius: 5px;
            margin: 20px 0;
        }

        .legal-note-title {
            font-weight: 600;
            color: #F05A45;
            margin-bottom: 10px;
        }

        .legal-note p {
            color: rgba(255, 255, 255, 0.9);
            margin: 0 0 10px 0;
        }

        .toc {
            background-color: rgba(255, 255, 255, 0.05);
            padding: 20px;
            border-radius: 8px;
            margin-bottom: 30px;
        }

        .toc-title {
            font-size: 18px;
            font-weight: 600;
            color: #ECB13A;
            margin-bottom: 15px;
        }

        .toc-list {
            list-style-type: none;
            padding: 0;
            margin: 0;
        }

        .toc-list li {
            margin-bottom: 10px;
        }

        .toc-list a {
            color: #FFFFFF;
            text-decoration: none;
            transition: color 0.2s ease;
            display: block;
            padding: 5px 0;
        }

        .toc-list a:hover {
            color: #ECB13A;
        }

        .example-box {
            background-color: rgba(255, 255, 255, 0.05);
            padding: 15px;
            border-radius: 8px;
            margin: 15px 0;
        }

        .example-title {
            font-weight: 600;
            color: #ECB13A;
            margin-bottom: 10px;
        }

        .example-content {
            font-style: italic;
            color: rgba(255, 255, 255, 0.8);
        }

        .back-button {
            display: inline-block;
            background-color: #ECB13A;
            color: #FFFFFF;
            border: none;
            padding: 12px 25px;
            border-radius: 9999px;
            font-weight: 600;
            font-size: 16px;
            text-decoration: none;
            transition: all 0.2s ease;
            margin-top: 30px;
        }

        .back-button:hover {
            background-color: #d9a035;
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(236, 177, 58, 0.3);
        }

        @media (max-width: 768px) {
            header {
                padding: 15px 20px;
            }
            
            .terms-container {
                padding: 0 15px;
            }
            
            .terms-section {
                padding: 20px;
            }
            
            .main-title {
                font-size: 26px;
            }
            
            .terms-section h2 {
                font-size: 22px;
            }
            
            .terms-section h3 {
                font-size: 18px;
            }
        }
    </style>
