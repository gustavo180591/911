{% extends 'base.html.twig' %}

{% block title %}Editar Perfil{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Editar Perfil</h1>

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    {{ form_start(form) }}

    <div class="mb-3">
        {{ form_label(form.nombre, 'Nombre') }}
        {{ form_widget(form.nombre, { 'attr': {'class': 'form-control'} }) }}
        {{ form_errors(form.nombre) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.apellido, 'Apellido') }}
        {{ form_widget(form.apellido, { 'attr': {'class': 'form-control'} }) }}
        {{ form_errors(form.apellido) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.email, 'Correo Electrónico') }}
        {{ form_widget(form.email, { 'attr': {'class': 'form-control'} }) }}
        {{ form_errors(form.email) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.telefono, 'Teléfono') }}
        {{ form_widget(form.telefono, { 'attr': {'class': 'form-control'} }) }}
        {{ form_errors(form.telefono) }}
    </div>   

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>

    {{ form_end(form) }}

    <div class="mt-3">
        <a href="{{ path('profile_index') }}" class="btn btn-secondary">Volver al Perfil</a>
    </div>
</div>
{% endblock %}
