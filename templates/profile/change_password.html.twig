{% extends 'base.html.twig' %}

{% block title %}Cambiar Contraseña{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Cambiar Contraseña</h1>

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    {{ form_start(form) }}

    <div class="mb-3">
        {{ form_label(form.oldPassword, 'Contraseña Actual') }}
        {{ form_widget(form.oldPassword, { 'attr': {'class': 'form-control'} }) }}
        {{ form_errors(form.oldPassword) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.newPassword.first, 'Nueva Contraseña') }}
        {{ form_widget(form.newPassword.first, { 'attr': {'class': 'form-control'} }) }}
        {{ form_errors(form.newPassword.first) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.newPassword.second, 'Repetir Nueva Contraseña') }}
        {{ form_widget(form.newPassword.second, { 'attr': {'class': 'form-control'} }) }}
        {{ form_errors(form.newPassword.second) }}
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>

    {{ form_end(form) }}

    <div class="mt-3">
        <a href="{{ path('profile_index') }}" class="btn btn-secondary">Volver al Perfil</a>
    </div>
</div>
{% endblock %}
