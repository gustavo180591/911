{% extends 'base.html.twig' %}

{% block title %}Mi perfil{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap');

    body {
        font-family: 'Montserrat', sans-serif;
        background-color: #191D33;
        color: #FFFFFF;
        margin: 0;
        padding: 0;
        overflow-x: hidden;
        scroll-behavior: smooth;
    }

    header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px 40px;
        flex-wrap: wrap;
    }

    .logo-header {
        display: flex;
        align-items: center;
        cursor: pointer;
    }

    .logo-header img {
        height: 40px;
        width: auto;
        margin-right: 10px;
    }

    .nav-toggle {
        display: none;
        font-size: 28px;
        color: #FFFFFF;
        background: none;
        border: none;
        cursor: pointer;
        z-index: 1002;
    }

    nav.nav-menu {
        display: flex;
        align-items: center;
        gap: 20px;
    }

    .nav-link, .contact-button {
        background-color: #ECB13A;
        border-radius: 9999px;
        padding: 10px 20px;
        font-weight: bold;
        font-size: 14px;
        color: #FFFFFF;
        text-decoration: none;
        transition: background-color 0.2s ease;
    }

    .nav-link:hover, .contact-button:hover {
        background-color: #d9a235;
    }

    .about-button {
        background: transparent;
        color: #FFFFFF;
        border-radius: 9999px;
        padding: 10px 20px;
        font-weight: bold;
        font-size: 14px;
        text-decoration: none;
        transition: color 0.2s;
    }

    .about-button:hover {
        color: #ECB13A;
    }

    .user-profile {
        position: relative;
        display: flex;
        align-items: center;
    }

    .profile-image {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        cursor: pointer;
    }

    .profile-dropdown {
        position: absolute;
        top: 100%;
        right: 0;
        background-color: #1E2240;
        border-radius: 0.25rem;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        width: 150px;
        z-index: 10;
        display: none;
        margin-top: 5px;
        padding: 8px 0;
    }

    .profile-dropdown.show {
        display: block;
    }

    .dropdown-item {
        display: block;
        padding: 10px 15px;
        color: white;
        text-decoration: none;
        transition: background-color 0.2s;
        font-size: 14px;
    }

    .dropdown-item:hover {
        background-color: #2e325a;
    }

    .profile-button {
        background: none;
        border: none;
        display: flex;
        align-items: center;
        color: white;
        cursor: pointer;
        padding: 0;
    }

    .profile-button .arrow {
        margin-left: 5px;
        font-size: 12px;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 40px 20px;
    }

    .profile-container {
        max-width: 800px;
        margin: 40px auto;
    }

    h1 {
        font-size: 28px;
        margin-bottom: 30px;
    }

    .form-group, .form-row {
        margin-bottom: 20px;
    }

    .form-row {
        display: flex;
        gap: 20px;
    }

    .form-col {
        flex: 1;
    }

    label {
        display: block;
        margin-bottom: 8px;
        font-size: 14px;
    }

    .form-control, .phone-input {
        width: 100%;
        padding: 12px 15px;
        border-radius: 8px;
        border: 1px solid rgba(255, 255, 255, 0.7);
        background-color: transparent;
        color: white;
        box-sizing: border-box;
        font-family: 'Montserrat', sans-serif;
    }

    .form-control:focus {
        outline: none;
        border-color: #ECB13A;
    }

    .phone-container {
        display: flex;
        align-items: center;
        background-color: transparent;
        border: 1px solid rgba(255, 255, 255, 0.7);
        border-radius: 8px;
        overflow: hidden;
    }

    .country-selector {
        display: flex;
        align-items: center;
        padding: 0 10px;
        background-color: rgba(255, 255, 255, 0.1);
        border-right: 1px solid rgba(255, 255, 255, 0.3);
    }

    .selected-flag {
        margin-right: 5px;
    }

    .action-links {
        margin-top: 30px;
    }

    .action-link {
        display: block;
        color: white;
        margin-bottom: 10px;
        text-decoration: none;
    }

    .action-link:hover {
        color: #ECB13A;
    }

    .delete-account {
        color: #FF6B6B;
    }

    .delete-account:hover {
        color: #FF4757;
    }

    /* Responsive */
    @media (max-width: 768px) {
        header {
            padding: 15px 20px;
        }

        .logo-header img {
            height: 32px;
        }

        .nav-toggle {
            display: block;
        }

        nav.nav-menu {
            display: none;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            background-color: rgba(0, 0, 0, 0.95);
            z-index: 1000;
        }

        nav.nav-menu.active {
            display: flex;
        }

        .nav-link, .about-button, .contact-button {
            width: 100%;
            font-size: 18px;
            padding: 15px 0;
            margin: 8px 0;
        }
    }
</style>
{% endblock %}

