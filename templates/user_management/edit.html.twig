{% extends 'base.html.twig' %}

{% block title %}Editar Usuario{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Editar Usuario</h1>

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}

    {{ form_start(form) }}

    <div class="mb-3">
        {{ form_label(form.nombre, 'Nombre') }}
        {{ form_widget(form.nombre, { 'attr': {'class': 'form-control'} }) }}
        {{ form_errors(form.nombre) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.apellido, 'Apellido') }}
        {{ form_widget(form.apellido, { 'attr': {'class': 'form-control'} }) }}
        {{ form_errors(form.apellido) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.email, 'Correo Electrónico') }}
        {{ form_widget(form.email, { 'attr': {'class': 'form-control'} }) }}
        {{ form_errors(form.email) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.password, 'Contraseña') }}
        {{ form_widget(form.password, { 'attr': {'class': 'form-control'} }) }}
        {{ form_errors(form.password) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.rol, 'Rol') }}
        {{ form_widget(form.rol, { 'attr': {'class': 'form-control'} }) }}
        {{ form_errors(form.rol) }}
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>

    {{ form_end(form) }}

    <div class="mt-3">
        <a href="{{ path('user_management_index') }}" class="btn btn-secondary" style="color: white; font-weight: bold; text-decoration: none;">Volver a la Lista de Usuarios</a>
    </div>
</div>
{% endblock %}