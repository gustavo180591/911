{% extends 'base.html.twig' %}

{% block title %}SACI - CONTACTO{% endblock %}

{% block stylesheets %}
<style>
    @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap');

    body {
        background-color: #151c33;
        background-image: url("{{ asset('images/contact.png') }}");
        background-repeat: no-repeat;
        background-size: cover;
        font-family: 'Montserrat', sans-serif;
        color: #FFFFFF;
        margin: 0;
        padding: 0;
        overflow-x: hidden;
        scroll-behavior: smooth;
    }

    header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px 40px;
        flex-wrap: wrap;
    }

    .logo-header {
        display: flex;
        align-items: center;
        cursor: pointer;
    }

    .logo-header img {
        height: 40px;
        width: auto;
        margin-right: 10px;
    }

    .nav-toggle {
        display: none;
        font-size: 28px;
        color: #FFFFFF;
        background: none;
        border: none;
        cursor: pointer;
        z-index: 1002;
    }

    nav.nav-menu {
        display: flex;
        align-items: center;
        gap: 20px;
    }

    .nav-link {
        background-color: transparent;
        color: #E5A74E;
        border-radius: 9999px;
        padding: 10px 30px;
        font-weight: bold;
        font-size: 16px;
        text-decoration: none;
        transition: background-color 0.2s ease, color 0.2s ease;
    }

    .nav-link:hover {
        color: #FFFFFF;
    }

    .contact-title {
        font-size: 28px;
        font-weight: 500;
        text-align: center;
        margin-bottom: 0;
        letter-spacing: 1px;
    }

    .contact-subtitle {
        font-size: 42px;
        font-weight: 700;
        text-align: center;
        margin-top: 5px;
        margin-bottom: 40px;
    }

    .form-container {
        max-width: 500px;
        margin: 0 auto;
        padding: 0 20px;
        box-sizing: border-box;
    }

    .form-label {
        font-weight: 500;
        margin-bottom: 8px;
        display: block;
    }

    .form-control {
        width: 100%;
        max-width: 100%;
        box-sizing: border-box;
        padding: 12px 15px;
        border-radius: 10px;
        border: 1px solid rgba(255, 255, 255, 0.2);
        background-color: rgba(255, 255, 255, 0.05);
        color: #FFFFFF;
        font-family: 'Montserrat', sans-serif;
        margin-bottom: 20px;
    }

    .form-control:focus {
        outline: none;
        border-color: rgba(255, 255, 255, 0.5);
        box-shadow: 0 0 0 2px rgba(255, 255, 255, 0.1);
    }

    .btn-primary {
        background-color: #E5A74E;
        color: #FFFFFF;
        border: none;
        border-radius: 30px;
        padding: 12px 40px;
        font-weight: 600;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s;
        font-family: 'Montserrat', sans-serif;
    }

    .btn-primary:hover {
        background-color: #d9a235;
    }

    ::placeholder {
        color: rgba(255, 255, 255, 0.5);
    }

    @media (max-width: 768px) {
        header {
            padding: 12px 20px;
        }

        .logo-header img {
            height: 32px;
        }

        .nav-toggle {
            display: block;
        }

        nav.nav-menu {
            display: none;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            background-color: rgba(0, 0, 0, 0.95);
            z-index: 1000;
            animation: slideDown 0.3s ease-in-out;
        }

        nav.nav-menu.active {
            display: flex;
        }

        .nav-link {
            width: 100%;
            font-size: 20px;
            padding: 15px 0;
            margin: 8px 0;
        }

        .contact-title {
            font-size: 22px;
        }

        .contact-subtitle {
            font-size: 30px;
        }

        .form-control {
            font-size: 15px;
            padding: 10px 12px;
        }

        .btn-primary {
            font-size: 15px;
            padding: 10px 30px;
        }
    }

    @keyframes slideDown {
        0% {
            opacity: 0;
            transform: translateY(-10px);
        }
        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
{% endblock %}

{% block body %}
<header>
    <div class="logo-header" onclick="window.location.href='{{ path('home_index') }}'">
        <img src="{{ asset('images/favicon.png') }}" alt="SACI Logo">
        <img src="{{ asset('images/saci-blanco.png') }}" alt="SACI Texto" style="height: 50px;">
    </div>
    <button class="nav-toggle" id="nav-toggle" aria-label="Abrir menú">☰</button>
    <nav id="nav-menu" class="nav-menu">
        <a href="{{ path('home_about') }}" class="nav-link">SOBRE NOSOTROS</a>
    </nav>
</header>

<div class="container-fluid mt-5">
    <div class="row d-flex justify-content-center">
        <div class="col-md-6">
            <p class="contact-title">CONTÁCTANOS</p>
            <p class="contact-subtitle">Estamos para ayudarte</p>

            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}

            <div class="form-container">
                <form method="post" action="{{ path('contact_submit') }}">
                    <div class="mb-3">
                        <label for="email" class="form-label">Correo Electrónico</label>
                        <input type="email" id="email" name="email" class="form-control" placeholder="ejemplo@hotmail.com" required>
                    </div>
                    <div class="mb-4">
                        <label for="message" class="form-label">Mensaje</label>
                        <textarea id="message" name="message" class="form-control" rows="6" required></textarea>
                    </div>
                    <div class="d-flex justify-content-center align-items-center mt-3">
                        <button type="submit" class="btn btn-primary mx-auto">Enviar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const navToggle = document.getElementById('nav-toggle');
        const navMenu = document.getElementById('nav-menu');

        navToggle.addEventListener('click', () => {
            navMenu.classList.toggle('active');
            navToggle.innerHTML = navMenu.classList.contains('active') ? '✕' : '☰';
        });

        const links = document.querySelectorAll('#nav-menu a');
        links.forEach(link => {
            link.addEventListener('click', () => {
                navMenu.classList.remove('active');
                navToggle.innerHTML = '☰';
            });
        });
    });
</script>
{% endblock %}
