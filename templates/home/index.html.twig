{% extends 'base.html.twig' %}

{% block title %}SACI - INICIO{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Fuente base */
        @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;700&display=swap');

        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
            font-family: 'Montserrat', sans-serif;
            color: #FFFFFF;
            overflow-x: hidden;
            scroll-behavior: smooth;
        }

        body {
            background: linear-gradient(rgba(26, 26, 36, 0.85), rgba(26, 26, 36, 0.85)), 
                        url('{{ asset('images/fondo-inicio.png') }}') no-repeat center center;
            background-size: cover;
            background-attachment: fixed;
        }

        /* Animaciones */
        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes pulse {
            0%, 100% {
                transform: scale(1);
            }
            50% {
                transform: scale(1.05);
            }
        }

        .animate-fade-in {
            animation: fadeIn 0.8s ease-out forwards;
        }

        .animate-pulse-slow {
            animation: pulse 3s infinite;
        }

        /* Header y navegación */
        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 20px 50px;
            /* Ahora está en el flujo normal: se moverá con el scroll */
            position: static;
            transition: all 0.3s ease;
        }

        .header.scrolled {
            background-color: rgba(26, 26, 36, 0.9);
            backdrop-filter: blur(8px);
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
            padding: 12px 50px;
        }

        .logo-container {
            display: flex;
            align-items: center;
        }

        .logo-container img.logo {
            height: 40px;
            width: auto;
            transition: all 0.3s ease;
        }

        .header.scrolled .logo-container img.logo {
            height: 32px;
        }

        .nav-toggle {
            display: none;
            font-size: 24px;
            color: #FFFFFF;
            cursor: pointer;
            background: none;
            border: none;
            z-index: 1002;
            transition: all 0.3s ease;
        }

        .nav-menu {
            display: flex;
            gap: 24px;
            align-items: center;
        }

        .nav-link {
            display: inline-block;
            padding: 10px 24px;
            font-weight: 700;
            font-size: 16px;
            text-align: center;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .nav-link.inicio {
            color: #E5A74E;
        }

        .nav-link.inicio:hover {
            color: #FFFFFF;
            transform: translateY(-2px);
        }

        .nav-link.sobre-nosotros {
            color: #FFFFFF;
        }

        .nav-link.sobre-nosotros:hover {
            color: #E5A74E;
            transform: translateY(-2px);
        }

        .nav-link.contacto {
            background-color: #E5A74E;
            color: #FFFFFF;
            border-radius: 9999px;
        }

        .nav-link.contacto:hover {
            background-color: #FFFFFF;
            color: #E5A74E;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(229, 167, 78, 0.3);
        }

        /* Contenido principal */
        .main-content {
            padding: 140px 0 0 50px;
            max-width: 600px;
            animation: fadeIn 0.8s ease-out forwards;
            position: relative;
            z-index: 10;
        }

        .main-title {
            font-size: 56px;
            font-weight: 700;
            line-height: 1.1;
            margin-bottom: 24px;
        }

        .highlight {
            color: #E5A74E;
        }

        .subtitle {
            font-size: 20px;
            font-weight: 500;
            margin-bottom: 20px;
        }

        .description {
            font-size: 18px;
            line-height: 1.6;
            margin-bottom: 36px;
        }

        .description p {
            margin: 8px 0;
        }

        .button-container {
            display: flex;
            align-items: center;
            gap: 20px;
            margin-top: 20px;
            flex-wrap: wrap;
        }

        .register-button, .admin-button {
            background-color: #FF3B30;
            color: #FFFFFF;
            border: none;
            border-radius: 9999px;
            font-family: 'Montserrat', sans-serif;
            font-size: 18px;
            font-weight: 700;
            padding: 16px 32px;
            cursor: pointer;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 10px;
            transition: all 0.3s ease;
            width: auto;
            min-width: 200px;
            justify-content: center;
        }

        .admin-button {
            background-color: #E5A74E;
            margin-left: 0;
        }

        .register-button:hover {
            background-color: #E22D26;
            transform: scale(1.05);
            box-shadow: 0 8px 20px rgba(255, 59, 48, 0.3);
        }

        .admin-button:hover {
            background-color: #d99c2c;
            transform: scale(1.05);
            box-shadow: 0 8px 20px rgba(229, 167, 78, 0.3);
        }

        .register-button svg, .admin-button svg {
            width: 20px;
            height: 20px;
        }

        /* Sección institucional */
        .institutional-section {
            background-color: rgba(18, 18, 26, 0.7);
            backdrop-filter: blur(8px);
            padding: 60px 0;
            margin-top: 100px;
            text-align: center;
            position: relative;
            z-index: 10;
        }

        .institutional-title {
            font-size: 24px;
            font-weight: 700;
            margin-bottom: 40px;
        }

        .institutional-logos {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            align-items: center;
            gap: 40px;
            max-width: 1200px;
            margin: 0 auto;
        }

        .institutional-logo {
            height: 60px;
            width: auto;
            filter: grayscale(100%);
            transition: all 0.3s ease;
        }

        .institutional-logo:hover {
            filter: grayscale(0%);
            transform: scale(1.1);
        }

        /* Footer */
        .footer {
            background-color: #0A0A12;
            padding: 30px 50px;
            position: relative;
            z-index: 10;
        }

        .footer-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
            max-width: 1200px;
            margin: 0 auto;
        }

        .footer-logo {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .footer-logo img {
            height: 32px;
            width: auto;
        }

        .footer-links {
            display: flex;
            gap: 24px;
        }

        .footer-link {
            color: #FFFFFF;
            text-decoration: none;
            transition: color 0.3s ease;
        }

        .footer-link:hover {
            color: #E5A74E;
        }

        /* RESPONSIVE */
        @media (max-width: 1024px) {
            .header {
                padding: 20px 30px;
            }
            
            .header.scrolled {
                padding: 12px 30px;
            }

            .main-content {
                padding: 120px 30px 0 30px;
                max-width: 100%;
            }

            .main-title {
                font-size: 48px;
            }

            .institutional-logo {
                height: 50px;
            }

            .nav-menu {
                gap: 16px;
            }

            .nav-link {
                padding: 10px 16px;
                font-size: 14px;
            }

            .button-container {
                justify-content: center;
                gap: 15px;
            }

            .register-button, .admin-button {
                font-size: 16px;
                padding: 14px 28px;
                min-width: 180px;
            }
        }

        @media (max-width: 768px) {
            .nav-toggle {
                display: block;
            }

            .nav-menu {
            display: none;
            flex-direction: column;
            justify-content: center;   /* centra verticalmente */
            align-items: center;       /* centra horizontalmente */
            text-align: center;        /* asegura que el texto quede centrado */
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            background-color: rgba(0, 0, 0, 0.95);
            z-index: 1000;
            padding: 0;                /* elimina padding extra */
            transition: all 0.3s ease-in-out;
            }

            .nav-menu.active {
                display: flex;
            }

            .nav-link {
            width: 100%;               /* ocupa todo el ancho */
            padding: 15px 0;           /* un poco más de espacio vertical */
            margin: 8px 0;             /* separa cada ítem */
            font-size: 20px;
            text-align: center;
            }

            .nav-link.contacto {
            border: 2px solid #E5A74E;
            padding: 12px 30px;
            margin-top: 20px;
            width: auto;               /* para que no se estire demasiado */
            }

            .nav-link.contacto:hover {
                background-color: #E5A74E;
                color: #000;
            }

            .header {
                flex-direction: row;
                padding: 15px 20px;
            }

            .logo-container img.logo {
                height: 30px;
            }

            .main-content {
                padding: 100px 20px 0 20px;
                text-align: center;
                display: flex;
                flex-direction: column;
                align-items: center;
            }

            .main-title {
                font-size: 36px;
            }

            .subtitle {
                font-size: 18px;
            }
            
            .description {
                font-size: 16px;
            }

            .button-container {
                flex-direction: column;
                align-items: center;
                gap: 15px;
                width: 100%;
                max-width: 300px;
                margin: 20px auto;
            }

            .register-button, .admin-button {
                width: 100%;
                font-size: 16px;
                padding: 14px 28px;
                min-width: 0;
            }

            .institutional-logo {
                height: 40px;
            }

            .footer-content {
                flex-direction: column;
                gap: 20px;
            }

            .footer-links {
                flex-direction: column;
                align-items: center;
                gap: 16px;
            }
        }

        @media (max-width: 480px) {
            .main-title {
                font-size: 32px;
            }

            .institutional-logos {
                gap: 20px;
            }

            .institutional-logo {
                height: 30px;
            }

            .register-button, .admin-button {
                font-size: 15px;
                padding: 12px 24px;
            }

            .button-container {
                max-width: 100%;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <header class="header" id="header">
        <div class="logo-container">
            <img src="{{ asset('images/favicon.png') }}" alt="SACI Logo" class="logo" style="margin-right: 10px;">
            <img src="{{ asset('images/saci-blanco.png') }}" alt="SACI" class="logo">
        </div>
        
        <button class="nav-toggle" id="nav-toggle" aria-label="Abrir menú">☰</button>

        <nav id="nav-menu" class="nav-menu">
            <a href="{{ path('app_login') }}" class="nav-link inicio">INICIO</a>
            <a href="{{ path('home_about') }}" class="nav-link sobre-nosotros">SOBRE NOSOTROS</a>
            <a href="{{ path('home_contact') }}" class="nav-link contacto">CONTACTO</a>
        </nav>
    </header>

    <main class="main-content">
        <h1 class="main-title">
            BIENVENIDO<br>
            AL SISTEMA<br>
            <span class="highlight">SACI</span>
        </h1>
        
        <div class="subtitle">
            Sistema de Alerta Ciudadana Integrada
        </div>
        
        <div class="description">
            <p>Reporta incidentes de manera <strong>rápida y eficiente.</strong></p>
            <p><strong>SACI</strong> conecta a ciudadanos y autoridades en toda</p>
            <p>la provincia de <em>Misiones</em>.</p>
        </div>
        
        <div class="button-container">
        <a href="{{ path('emergency_create') }}" class="register-button">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="m21.73 18-8-14a2 2 0 0 0-3.48 0l-8 14A2 2 0 0 0 4 21h16a2 2 0 0 0 1.73-3Z"></path>
                <path d="M12 9v4"></path>
                <path d="M12 17h.01"></path>
            </svg>
            Registrar Incidente
        </a>

            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('emergency_index') }}" class="admin-button">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M2 12s3-7 10-7 10 7 10 7-3 7-10 7-10-7-10-7Z"></path>
                        <circle cx="12" cy="12" r="3"></circle>
                    </svg>
                    Ver Denuncias
                </a>

                <a href="{{ path('estadisticas_index') }}" class="admin-button">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <line x1="18" y1="20" x2="18" y2="10"></line>
                        <line x1="12" y1="20" x2="12" y2="4"></line>
                        <line x1="6" y1="20" x2="6" y2="14"></line>
                    </svg>
                    Estadísticas
                </a>
            {% endif %}
        </div>
    </main>

    <section class="institutional-section">
        <div class="institutional-logos">
            <img src="{{ asset('images/institucionales.png') }}" alt="Instituciones" class="institutional-logo">
            <!-- Puedes dividir la imagen en logos individuales para mejor efecto hover -->
        </div>
    </section>

    <footer class="footer">
        <div class="footer-content">
            <div class="footer-logo">
                <img src="{{ asset('images/favicon.png') }}" alt="SACI Logo">
                <span>SACI © {{ "now"|date("Y") }}</span>
            </div>
            <div class="footer-links">
                <a href="#" class="footer-link">Términos y Condiciones</a>
                <a href="#" class="footer-link">Política de Privacidad</a>
            </div>
        </div>
    </footer>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // Menú toggle
            const navToggle = document.getElementById('nav-toggle');
            const navMenu = document.getElementById('nav-menu');
            
            navToggle.addEventListener('click', () => {
                navMenu.classList.toggle('active');
                navToggle.innerHTML = navMenu.classList.contains('active') ? '✕' : '☰';
            });
            
            // Cerrar menú al hacer clic en un enlace
            const links = document.querySelectorAll('#nav-menu .nav-link');
            links.forEach(link => {
                link.addEventListener('click', () => {
                    navMenu.classList.remove('active');
                    navToggle.innerHTML = '☰';
                });
            });
            
            // Cambiar header al hacer scroll
            const header = document.getElementById('header');
            window.addEventListener('scroll', () => {
                if (window.scrollY > 20) {
                    header.classList.add('scrolled');
                } else {
                    header.classList.remove('scrolled');
                }
            });
        });
    </script>
{% endblock %}
