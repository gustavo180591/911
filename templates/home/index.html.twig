{% extends 'base.html.twig' %}

{% block title %}SACI - INICIO{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Fuente base */
        @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap');

        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
            font-family: 'Montserrat', sans-serif;
            color: #FFFFFF;
            overflow-x: hidden;
        }

        body {
            background: linear-gradient(rgba(48, 47, 70, 0.7), rgba(48, 47, 70, 0.7)), 
                        url('{{ asset('images/fondo-inicio.png') }}') no-repeat center center;
            background-size: cover;
            background-attachment: fixed;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 20px 50px;
            position: relative;
        }

        .logo-container {
            display: flex;
            align-items: center;
        }

        .logo-container img.logo {
            height: 50px;
            width: auto;
        }

        .nav-menu {
            display: flex;
            gap: 20px;
        }

        .nav-link {
            display: inline-block;
            padding: 10px 30px;
            font-weight: 700;
            font-size: 16px;
            text-align: center;
            text-decoration: none;
            transition: all 0.2s ease;
        }

        .nav-link.inicio {
            color: #E5A74E;
        }

        .nav-link.inicio:hover {
            color: #FFFFFF;
        }

        .nav-link.sobre-nosotros {
            color: #FFFFFF;
        }

        .nav-link.sobre-nosotros:hover {
            color: #E5A74E;
        }

        .nav-link.contacto {
            background-color: #E5A74E;
            color: #FFFFFF;
            border-radius: 9999px;
        }

        .nav-link.contacto:hover {
            background-color: #FFFFFF;
            color: #E5A74E;
        }

        .main-content {
            padding: 50px 0 0 50px;
            max-width: 600px;
        }

        .main-title {
            font-size: 56px;
            font-weight: 700;
            line-height: 1.1;
            margin-bottom: 20px;
        }

        .highlight {
            color: #E5A74E;
        }

        .subtitle {
            font-size: 18px;
            margin-bottom: 15px;
        }

        .description {
            font-size: 16px;
            line-height: 1.5;
            margin-bottom: 30px;
        }

        .description p {
            margin: 5px 0;
        }

        .register-button {
            background-color: #FF3B30;
            color: #FFFFFF;
            border: none;
            border-radius: 9999px;
            font-family: 'Montserrat', sans-serif;
            font-size: 16px;
            font-weight: 700;
            padding: 15px 30px;
            cursor: pointer;
            text-decoration: none;
            display: inline-block;
            transition: background-color 0.2s ease;
        }

        .register-button:hover {
            background-color: #E22D26;
        }

        .institutional-image {
            text-align: center;
            margin-top: 100px;
            padding-bottom: 50px;
        }

        .institutional-image img {
            max-width: 50%;
            height: auto;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="header">
        <div class="logo-container">
            <img src="{{ asset('images/favicon.png') }}" alt="SACI Logo" class="logo" style="height: 40px; margin-right: 10px;">
            <img src="{{ asset('images/saci-blanco.png') }}" alt="SACI" class="logo">
        </div>
        
        <div class="nav-menu">
            <a href="{{ path('auth_login') }}" class="nav-link inicio">INICIO</a>
            <a href="{{ path('home_about') }}" class="nav-link sobre-nosotros">SOBRE NOSOTROS</a>
            <a href="{{ path('home_contact') }}" class="nav-link contacto">CONTACTO</a>
        </div>
    </div>

    <div class="main-content">
        <h1 class="main-title">
            BIENVENIDO<br>
            AL SISTEMA<br>
            <span class="highlight">SACI</span>
        </h1>
        
        <div class="subtitle">
            Sistema de Alerta Ciudadana Integrada
        </div>
        
        <div class="description">
            <p>Reporta incidentes de manera <strong>r√°pida y eficiente.</strong></p>
            <p><strong>SACI</strong> conecta a ciudadanos y autoridades en toda</p>
            <p>la provincia de <em>Misiones</em>.</p>
        </div>
        
        <a href="{{ path('emergency_create') }}" class="register-button">
            Registrar Incidente
        </a>
    </div>

    <div class="institutional-image">
        <img src="{{ asset('images/institucionales.png') }}" alt="Imagen institucionales">
    </div>
{% endblock %}