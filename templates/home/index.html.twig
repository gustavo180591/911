{% extends 'base.html.twig' %}

{% block stylesheets %}
    <style>
        html,
        body {
            height: 100%;
            margin: 0;
            padding: 0;
        }
        body {
            background: url('{{ asset('images/fondo-inicio.png') }}') no-repeat center center fixed;
            background-size: cover;
        }
        .my-button {
            /* Color de fondo (rojo intenso) */
            background-color: #FF3B30;
            /* Texto en blanco */
            color: #FFFFFF;
            /* Quitar borde por defecto */
            border: none;
            /* Bordes muy redondeados para la forma de píldora */
            border-radius: 9999px;
            /* Tipografía y estilo */
            font-family: 'Montserrat', sans-serif;
            font-size: 16px;
            font-weight: 700;
            /* Espaciado interno */
            padding: 12px 24px;
            /* Cursor de mano */
            cursor: pointer;
            /* Quitar subrayado */
            text-decoration: none;
            /* Transición suave al hover */
            transition: background-color 0.2s ease;
        }
        .my-button:hover {
            background-color: #E22D26;
        }
    </style>
{% endblock %}

{% block title %}SACI - INICIO{% endblock %}

{% block body %}
    <style>
        /* Fuente base */
        @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap');

        html,
        body {
            margin: 0;
            padding: 0;
            height: 100%;
            background: url('{{ asset('images/fondo-inicio.png') }}') no-repeat center center fixed;
            background-size: cover;
            font-family: 'Montserrat', sans-serif;
            color: #FFFFFF;
        }

        h1 {
            font-size: 48px;
            font-weight: 700;
            margin-bottom: 1rem;
        }

        h2,
        h3,
        .subtitle {
            font-size: 24px;
            font-weight: 700;
            color: #E5A74E;
            margin-bottom: 1rem;
        }

        p {
            font-size: 18px;
            line-height: 1.4;
            margin-bottom: 0.5rem;
        }

        .contact-button {
            position: absolute;
            top: 20px;
            right: 20px;
            display: inline-block;
            background-color: #E5A74E;
            border-radius: 9999px;
            padding: 10px 30px;
            font-weight: bold;
            font-size: 16px;
            color: #FFFFFF;
            text-align: center;
            text-decoration: none;
            transition: background-color 0.2s ease, color 0.2s ease;
        }
        .contact-button:hover {
            background-color: #FFFFFF;
            color: #E5A74E;
        }

        .about-button {
            position: absolute;
            top: 20px;
            right: 180px;
            display: inline-block;
            background-color: transparent;
            border-radius: 9999px;
            padding: 10px 30px;
            font-weight: bold;
            font-size: 16px;
            color: #E5A74E;
            text-align: center;
            text-decoration: none;
            transition: background-color 0.2s ease, color 0.2s ease;
        }
        .about-button:hover {
            color: #FFFFFF;
        }

        .inicio-button {
            position: absolute;
            top: 20px;
            right: 370px;
            display: inline-block;
            background-color: transparent;
            border-radius: 9999px;
            padding: 10px 30px;
            font-weight: bold;
            font-size: 16px;
            color: #E5A74E;
            text-align: center;
            text-decoration: none;
            transition: background-color 0.2s ease, color 0.2s ease;
        }
        .inicio-button:hover {
            color: #FFFFFF;
        }

        .card-title {
            font-size: 20px;
            font-weight: 700;
            color: #E5A74E;
        }
        .card-text {
            font-size: 16px;
            color: #FFFFFF;
        }

        .btn-primary {
            background-color: #E5A74E;
            border-color: #E5A74E;
            font-weight: 700;
        }
        .btn-primary:hover {
            background-color: #FFFFFF;
            border-color: #FFFFFF;
            color: #E5A74E;
        }
        .btn-secondary {
            background-color: #FFFFFF;
            border-color: #FFFFFF;
            font-weight: 700;
            color: #E5A74E;
        }
        .btn-secondary:hover {
            background-color: #E5A74E;
            border-color: #E5A74E;
            color: #FFFFFF;
        }

        .my-button {
            background-color: #EA633F;
            color: #FFFFFF;
            border: none;
            border-radius: 9999px;
            font-family: 'Montserrat', sans-serif;
            font-size: 16px;
            font-weight: 700;
            padding: 12px 24px;
            cursor: pointer;
            text-decoration: none;
            transition: background-color 0.2s ease;
        }
        .my-button:hover {
            background-color: #E22D26;
        }
    </style>

    <a href="{{ path('auth_login') }}" class="inicio-button" style="right: 600px;">INICIO</a>
    <a href="{{ path('home_about') }}" class="about-button" style="right: 400px;">SOBRE NOSOTROS</a>
    <a href="{{ path('home_contact') }}" class="contact-button" style="right: 240px;">CONTACTO</a>

    <div style="display: flex; align-items: center;">
        <div style="position: relative; left: 20%; top: 20%;">
            <img src="{{ asset('images/favicon.png') }}" alt="SACI" class="favicon" style="height: 40px; width: auto; margin-left: 10px; transform: translateY(10%);"/>
            <img src="{{ asset('images/saci-blanco.png') }}" alt="SACI" class="float-left mt-2" style="height: 50px; width: auto; transform: translateY(20%);"/>
        </div>
    </div>
    <div class="container-fluid mt-4" style="margin-left: 20%;">
        <h1 style="display: block; margin-bottom: 1.5rem; position: relative; left: 0%; font-size: 56px;">
            BIENVENIDO<br>AL SISTEMA<br><span style="color: #E5A74E;">SACI</span>
        </h1>
        <p style="font-family: 'Montserrat', sans-serif; line-height: 2.5;">SISTEMA DE ALERTA CIUDADANA INTEGRADA</p>
        <p style="font-family: 'Montserrat', sans-serif; line-height: 0.5;">Reporta incidentes de manera <strong>rápida y eficiente.</strong></p>
        <p style="font-family: 'Montserrat', sans-serif; line-height: 0.5;">
            <strong>SACI</strong> conecta a ciudadanos y autoridades en toda
        </p>
        <p style="font-family: 'Montserrat', sans-serif; line-height: 0.5;">la provincia de <i>Misiones</i>.</p>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body text-center">
                    <a href="{{ path('emergency_create') }}" class="my-button" style="position: relative; top: 60px; left: 120px;">
                        Registrar incidente
                    </a>
                </div>
            </div>
        </div>
    </div>

    {# Imagen institucional al final del contenido #}
    <div style="text-align: center; margin-top: 20rem;">
        <img src="{{ asset('images/institucionales.png') }}" alt="Imagen institucionales" style="max-width: 50%; height: auto;">
    </div>
{% endblock %}
