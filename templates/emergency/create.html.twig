{% extends 'base.html.twig' %}

{% block title %}Registrar Emergencia{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Registrar Nueva Emergencia</h1>

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}

    {{ form_start(form) }}

    <div class="mb-3">
        {{ form_label(form.descripcion, 'Descripción de la Emergencia') }}
        {{ form_widget(form.descripcion, { 'attr': {'class': 'form-control'} }) }}
        {{ form_errors(form.descripcion) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.fechaHora, 'Fecha y Hora del Incidente') }}
        {{ form_widget(form.fechaHora, { 'attr': {'class': 'form-control'} }) }}
        {{ form_errors(form.fechaHora) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.categoria, 'Categoría') }}
        {{ form_widget(form.categoria, { 'attr': {'class': 'form-control'} }) }}
        {{ form_errors(form.categoria) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.ubicacion, 'Ubicación') }}
        {{ form_widget(form.ubicacion, { 'attr': {'class': 'form-control'} }) }}
        {{ form_errors(form.ubicacion) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.evidencias, 'Evidencias (Opcional)') }}
        {{ form_widget(form.evidencias, { 'attr': {'class': 'form-control'} }) }}
        {{ form_errors(form.evidencias) }}
    </div>

    <button type="submit" class="btn btn-primary">Registrar</button>

    {{ form_end(form) }}

    <div class="mt-3">
        <a href="{{ path('emergency_index') }}" class="btn btn-secondary">Volver a la Lista de Emergencias</a>
    </div>
</div>
<div id="map" style="width: 100%; height: 400px;" class="mt-3"></div>

<script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
<link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />

<script>
    // Inicializar el mapa
    const map = L.map('map').setView([0, 0], 13);

    // Agregar la capa de tiles (usamos OpenStreetMap en este ejemplo)
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        maxZoom: 19,
    }).addTo(map);

    // Controlar el cambio de selección en el formulario
    const ubicacionSelect = document.querySelector('#{{ form.ubicacion.vars.id }}');

    ubicacionSelect.addEventListener('change', function () {
        const selectedOption = ubicacionSelect.options[ubicacionSelect.selectedIndex];
        const dataCoordinates = selectedOption.getAttribute('data-coordinates');
        
        if (dataCoordinates) {
            const [lat, lng] = dataCoordinates.split(',');
            map.setView([parseFloat(lat), parseFloat(lng)], 15);
            
            // Agregar un marcador en la ubicación seleccionada
            L.marker([lat, lng]).addTo(map).bindPopup(selectedOption.text).openPopup();
        }
    });
</script>
{% endblock %}
