{% extends 'base.html.twig' %}

{% block title %}Detalle de Emergencia{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Detalle de Emergencia</h1>

    <table class="table table-bordered">
        <tr>
            <th>Descripción</th>
            <td>{{ emergency.descripcion }}</td>
        </tr>
        <tr>
            <th>Fecha y Hora</th>
            <td>{{ emergency.fechaHora|date('d-m-Y H:i:s') }}</td>
        </tr>
        <tr>
            <th>Ubicación</th>
            <td>{{ emergency.ubicacion.calle ~ ', ' ~ emergency.ubicacion.numero }}</td>
            </tr>
        <tr>
            <th>Evidencias</th>
            <td>
                {% if emergency.evidencias|length > 0 %}
                    <div class="d-flex flex-wrap">
                        {% for evidencia in emergency.evidencias %}
                            <div class="me-3 mb-3" style="width: 150px;">
                                <div class="card">
                                    {% if evidencia.rutaArchivo %}
                                        {# Verificar si el archivo es una imagen #}
                                        {% if evidencia.rutaArchivo ends with '.jpg' or evidencia.rutaArchivo ends with '.jpeg' or evidencia.rutaArchivo ends with '.png' or evidencia.rutaArchivo ends with '.gif' %}
                                            <img src="{{ asset('uploads/denuncias/' ~ evidencia.rutaArchivo) }}" 
                                                 alt="Evidencia" 
                                                 class="card-img-top img-thumbnail" 
                                                 style="width: 100%; height: 150px; object-fit: cover;">
                                        {% else %}
                                            {# Si no es una imagen, mostrar un ícono genérico #}
                                            <div class="text-center py-4">
                                                <i class="fas fa-file fa-3x"></i>
                                            </div>
                                        {% endif %}
                                        <div class="card-body text-center">
                                            <a href="{{ asset('uploads/denuncias/' ~ evidencia.rutaArchivo) }}" 
                                               target="_blank" 
                                               class="btn btn-sm btn-primary">
                                                Ver archivo
                                            </a>
                                        </div>
                                    {% else %}
                                        <div class="card-body text-center">
                                            <span class="text-muted">Archivo no disponible</span>
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <span class="text-muted">No hay evidencias disponibles.</span>
                {% endif %}
            </td>
            </tr>
        <tr>
            <th>Estado</th>
            <td>{{ emergency.estado.nombre }}</td>
        </tr>
        </table>

    <div class="mt-3">
        <a href="{{ path('emergency_index') }}" class="btn btn-secondary">Volver a la Lista de Emergencias</a>
    </div>
</div>
{% endblock %}