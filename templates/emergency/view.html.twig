{% extends 'base.html.twig' %}

{% block title %}Detalle de Emergencia{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Detalle de Emergencia</h1>

    <table class="table table-bordered">
        <tr>
            <th>ID</th>
            <td>{{ emergency.id }}</td>
        </tr>
        <tr>
            <th>Descripción</th>
            <td>{{ emergency.descripcion }}</td>
        </tr>
        <tr>
            <th>Fecha y Hora</th>
            <td>{{ emergency.fechaHora|date('d-m-Y H:i:s') }}</td>
        </tr>
        <tr>
            <th>Ubicación</th>
            <td>{{ emergency.ubicacion.calle ~ ', ' ~ emergency.ubicacion.numero }}</td>
        </tr>
        <tr>
            <th>Evidencias</th>
            <td>
                {% if emergency.evidencias|length > 0 %}
                    <ul class="list-unstyled">
                        {% for evidencia in emergency.evidencias %}
                            <li class="mb-2">
                                {% if evidencia.rutaArchivo %}
                                    <a href="{{ asset('uploads/denuncias/' ~ evidencia.rutaArchivo) }}" target="_blank" class="text-decoration-none">
                                        {# Íconos según el tipo de evidencia #}
                                        {% if evidencia.tipo == 'imagen' %}
                                            <i class="fas fa-image"></i>
                                        {% elseif evidencia.tipo == 'video' %}
                                            <i class="fas fa-video"></i>
                                        {% elseif evidencia.tipo == 'audio' %}
                                            <i class="fas fa-volume-up"></i>
                                        {% else %}
                                            <i class="fas fa-file"></i>
                                        {% endif %}
                                        {{ evidencia.tipo }} ({{ evidencia.rutaArchivo }})
                                    </a>
                                {% else %}
                                    <span class="text-muted">
                                        {# Íconos según el tipo de evidencia #}
                                        {% if evidencia.tipo == 'imagen' %}
                                            <i class="fas fa-image"></i>
                                        {% elseif evidencia.tipo == 'video' %}
                                            <i class="fas fa-video"></i>
                                        {% elseif evidencia.tipo == 'audio' %}
                                            <i class="fas fa-volume-up"></i>
                                        {% else %}
                                            <i class="fas fa-file"></i>
                                        {% endif %}
                                        {{ evidencia.tipo }} (Archivo no disponible)
                                    </span>
                                {% endif %}
                            </li>
                        {% endfor %}
                    </ul>
                {% else %}
                    <span class="text-muted">No hay evidencias disponibles.</span>
                {% endif %}
            </td>
        </tr>
    </table>

    <div class="mt-3">
        <a href="{{ path('emergency_index') }}" class="btn btn-secondary">Volver a la Lista de Emergencias</a>
    </div>
</div>
{% endblock %}