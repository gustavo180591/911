{% extends 'base.html.twig' %}

{% block title %}Mis denuncias{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Mis denuncias</h1>

    {% if app.user.denuncias|length > 0 %}
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Descripción</th>
                    <th>Fecha y Hora</th>
                    <th>Ubicación</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                {% for denuncia in app.user.denuncias %}
                    {% if denuncia.usuario.id == app.user.id %}
                        <tr>
                            <td>{{ denuncia.id }}</td>
                            <td>{{ denuncia.descripcion }}</td>
                            <td>{{ denuncia.fechaHora|date('d-m-Y H:i:s') }}</td>
                            <td>
                                {% if denuncia.ubicacion %}
                                    {{ denuncia.ubicacion.calle ~ ', ' ~ denuncia.ubicacion.numero }}
                                {% else %}
                                    <span class="text-muted">Sin ubicación</span>
                                {% endif %}
                            </td>
                            <td>
                                <a href="{{ path('emergency_show', {id: denuncia.id}) }}" class="btn btn-primary" style="color: white; font-weight: bold; text-decoration: none;">Ver</a>
                            </td>
                        </tr>
                    {% endif %}
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <div class="alert alert-info">
            No has registrado ninguna denuncia.
        </div>
    {% endif %}
</div>
{% endblock %}
