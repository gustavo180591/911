{% extends 'base.html.twig' %}

{% block title %}Editar Categoría{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Editar Categoría</h1>

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}

    {{ form_start(form) }}

    <div class="mb-3">
        {{ form_label(form.nombre, 'Nombre de la Categoría') }}
        {{ form_widget(form.nombre, { 'attr': {'class': 'form-control'} }) }}
        {{ form_errors(form.nombre) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.descripcion, 'Descripción') }}
        {{ form_widget(form.descripcion, { 'attr': {'class': 'form-control'} }) }}
        {{ form_errors(form.descripcion) }}
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>

    {{ form_end(form) }}

    <div class="mt-3">
        <a href="{{ path('category_index') }}" class="btn btn-secondary">Volver a la Lista de Categorías</a>
    </div>
</div>
{% endblock %}
