{% extends 'base.html.twig' %}

{% block title %}Detalle de Registro de Auditoría{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Detalle de Registro de Auditoría</h1>

    <table class="table table-bordered">
        <tr>
            <th>ID</th>
            <td>{{ log.id }}</td>
        </tr>
        <tr>
            <th>Usuario</th>
            <td>{{ log.usuario ? log.usuario.email : 'Anónimo' }}</td>
        </tr>
        <tr>
            <th>Acción</th>
            <td>{{ log.accion }}</td>
        </tr>
        <tr>
            <th>Fecha y Hora</th>
            <td>{{ log.fechaHora|date('d-m-Y H:i:s') }}</td>
        </tr>
        <tr>
            <th>Detalles</th>
            <td>{{ log.detalle }}</td>
        </tr>
    </table>

    <div class="mt-3">
        <a href="{{ path('audit_log_index') }}" class="btn btn-secondary">Volver a la Lista</a>
    </div>
</div>
{% endblock %}
