{% extends 'base.html.twig' %}

{% block title %}Enviar Mensaje{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Enviar Nuevo Mensaje</h1>

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}

    {{ form_start(form) }}

    <div class="mb-3">
        {{ form_label(form.usuarioDestinatario, 'Destinatario') }}
        {{ form_widget(form.usuarioDestinatario, { 'attr': {'class': 'form-control'} }) }}
        {{ form_errors(form.usuarioDestinatario) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.contenido, 'Mensaje') }}
        {{ form_widget(form.contenido, { 'attr': {'class': 'form-control', 'rows': '5'} }) }}
        {{ form_errors(form.contenido) }}
    </div>

    <button type="submit" class="btn btn-primary">Enviar</button>

    {{ form_end(form) }}

    <div class="mt-3">
        <a href="{{ path('message_index') }}" class="btn btn-secondary">Volver a la Bandeja de Mensajes</a>
    </div>
</div>
{% endblock %}
