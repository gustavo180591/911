{% extends 'base.html.twig' %}

{% block title %}Subir Evidencia{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Subir Nueva Evidencia</h1>

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}

    {{ form_start(form, { 'attr': {'enctype': 'multipart/form-data'} }) }}

    <div class="mb-3">
        {{ form_label(form.tipo, 'Tipo de Evidencia') }}
        {{ form_widget(form.tipo, { 'attr': {'class': 'form-control'} }) }}
        {{ form_errors(form.tipo) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.rutaArchivo, 'Archivo') }}
        {{ form_widget(form.rutaArchivo, { 'attr': {'class': 'form-control'} }) }}
        {{ form_errors(form.rutaArchivo) }}
    </div>

    <button type="submit" class="btn btn-primary">Subir Evidencia</button>

    {{ form_end(form) }}

    <div class="mt-3">
        <a href="{{ path('evidence_index') }}" class="btn btn-secondary">Volver a la Lista de Evidencias</a>
    </div>
</div>
{% endblock %}
